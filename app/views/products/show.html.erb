<p>
  <strong>image:</strong>
  <% if @product.avatar.attached? %>
    <%= image_tag(url_for(@product.avatar), :size => "260x180") %>
  <% end %>
</p>

<p>
  <strong>name:</strong>
  <%= @product.name %>
</p>
 
<p>
  <strong>description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Back', products_path, class:"btn btn-info" %>
