<p>
  <strong>image:</strong>
  <% if @product.avatar.attached? %>
    <% @product.avatar.each do |avatar| %>
        <td><%= image_tag(avatar, size: '100x100') %></td>
    <% end %>
  <% end %>
</p>

<p>
  <strong>name:</strong>
  <%= @product.name %>
</p>
 
<p>
  <strong>description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>price:</strong>
  <%= @product.price %>
</p>

<%= link_to 'Back', products_path, class:"btn btn-info" %>
